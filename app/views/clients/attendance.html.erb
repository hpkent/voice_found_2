<div class="container-fluid nopadding">
	<div class="col-xs-12">
      <h2>Record Attendance</h2>
   </div>
   <div class="col-xs-12">
		<div class="panel panel-default">
      	<div class="panel-heading" id="light-blue">
	         <h4 class="panel-title" id="blue-text"><%=@sitting_event_title + " - " + @sitting_start_date%></h4>
      	</div>
      	<div class="panel-body">
            <%if @current_note != nil %>
				<p><%=@current_note.content%></p>
			   <div class="prev">
				  <%= button_to('Edit', edit_note_path(@current_note.id), :class => 'btn btn-secondary btn-grey-padded btn-sm pull-right')%>
			   </div>
			   <div class="next">
				   <%= button_to('Delete', "/notes/#{@current_note.id}/destroy",
					:method => :delete,
                    data: { confirm: 'Are you sure?' }, :class => 'btn btn-secondary btn-sm pull-right')%>
            </div>
			      <%else%>
			         <%= button_to('New Note', new_note_path, :class => 'btn btn-secondary btn-grey-padded btn-md pull-right')%>
			      <%end%>
         </div>
		 </div>
	</div>
	<div class="col-xs-12">
		<%= button_to('View all clients', clients_list_all_path, :class => 'btn btn-secondary btn-grey-padded btn-md pull-right')%>
	</div>
	<div class="col-xs-12">
	 	<div class="panel panel-default">
      	<div class="col-xs-12 panel-heading" id="light-blue">
        	<div class="col-xs-12 col-sm-6">
		 		<%= form_for(@clients_groups, :url => {:action => "new_dropdown"}, :html => {
                     :class =>"select_client_group_form"} ) do |f| %>
		 		   <%= f.label "Select group", :class => "select_client_group_form"%>
		         <%= f.collection_select(:group_id, Group.all, :id, :name)%><br />
		      <div id= "buttonId" class="actions">
		         <%= f.submit "Submit", class:"btn btn-secondary btn-md" %>
		      </div>
		      <%end%>
			</div>
			<div class="col-xs-12 col-sm-6">
				<%= form_for(@clients_sittings, :url => {:action => "update_clients_sitting_autocomplete"}, :html => {
                     :class =>"select_client_group_form"}) do |f| %>
					<div class="field">
					<%= f.label "Search for clients" %>
					<%= autocomplete_field_tag('Name', '', autocomplete_client_path, :id_element => "#clients_sitting_client_id", class: "form-control", id:"name-search-autocomplete") %>
					<%= f.hidden_field :sitting_id, :value => @sitting_id %>
					<%= f.hidden_field :client_id %>
					<%= f.hidden_field :attendance_status_type_id, :value => @attendance_status_type_id_present%>
					</div>
				<%end%>
			</div>
			</div>
		<!-- EXPECTED STUDENTS -->
	         <table class="table table-condensed" id="scheduled-table">
				<thead>
					<tr class="noborder">
						<th colspan="4"><h3>Expected clients</h3></th>
					</tr>
					<tr>
						<th class="norm">Name</th>
						<th id="td-align" class="norm">Change attendance</th>
						<th id="td-align" class="norm"></th>
					</tr>
				</thead>
						<% @scheduled_clients.each do |client| %>
					<tr>
						<td class="norm">
                     <div>
                        <% if client.last_name != nil %>
                        <%=client.first_name + " " + client.last_name%>
                        <%else %>
                        <%=client.first_name%>
                        <%end%>
                     </div>
                  </td>
						<td>
						<div id="center">
							<div class="btn-group" role="group">
							<%= form_for(@clients_sittings, :url => {:action => "update_client_status"}, remote: true) do |f| %>
                        <%= f.hidden_field :sitting_id, :value => @sitting_id %>
                         	<%= f.hidden_field :client_id, :value => client.id %>
                        <%= f.hidden_field :attendance_status_type_id, :value => @attendance_status_type_id_present%>
                        <div id="scheduled_btn" class="btn">
                          <%= button_tag(type: 'submit', class: "btn btn-default btn-xs update_client_status test23") do %>
                              <i class="glyphicon glyphicon-ok"></i>
                          <%end%>
                        </div>
                        <%end%>
                           <div id="scheduled_btn" class="btn">
                              <%=link_to "/clients/#{client.clients_sittings_id}/cancel_attendance", :method => :delete, :remote =>:true, class: "btn btn-default btn-xs cancel_attendance" do %>
                                 <i class="glyphicon glyphicon-remove"></i>
                              <%end%>
                           </div>
		              		</div>
		              	</div>
		              	</td>
		              	<td id="td-align"></td>
		            </tr>
		             	<%end%>
		        </table>

		<!-- ATTENDING STUDENTS -->
				<table class="table table-condensed" id="attending-table">
				<thead>
					<tr>
						<th colspan="5"><h3>Attending clients</h3></th>
					</tr>
					<tr>
						<th class="norm">Name</th>
						<th id="th-align" class="norm">Notes</th>
                        <th id="th-align" class="norm">Hatto</th>
						<th id="td-align" class="norm">Remove</th>
					</tr>
				</thead>
					<% @attending_clients.each do |client| %>
                  <tr>
                     <td class="norm">
                        <% if client.last_name != nil %>
                        <%=client.first_name + " " + client.last_name%>
                        <%else %>
                        <%=client.first_name%>
               <%end%>
                     <td id="td-align norm">
                        <div id="center">
                           <div class="btn-group" role="group">
                              <div id="btn-correction" class="btn btn-xs disabled">
                                 <% if client.special_status != nil%>
                                    <%=client.special_status%>
                                 <%end%>
                              </div>
                           </div>
                           <div id="scheduled_btn" class="btn">
                              <%=link_to "/clients/#{client.id}/new_special_status", class:"btn btn-default btn-xs" do%>
                                 <i class="glyphicon glyphicon-edit"></i>
                              <%end%>
                           </div>
                        </div>
                     </td>
                     <td id="td-align norm">
                        <div id="center">
                           <%= form_for(@clients_sittings_loc, :url => {:action => "update_location_status"}, :html => {:class => "loctype"}, remote: true) do |f| %>

                              <%= f.hidden_field :sitting_id, :value => @sitting_id %>
                              <%= f.hidden_field :client_id, :value => client.id %>

                           <div id="scheduled_btn" class="btn">
                              <%
                              @clients_sittings_check = ClientsSitting.where(sitting_id:@sitting_id,client_id:client.id).first_or_initialize
                              if @clients_sittings_check.hatto == true%>
                               <%= f.check_box :hatto, options = {:checked => true, :class => "checkbox"} %>
                              <%else%>
                               <%= f.check_box :hatto, options = {:checked => false, :class => "checkbox"} %>
                              <%end%>
                           </div>
                           <%end%>
                        </div>
                     </td>
                     <td id="td-align">
                        <%=link_to "/clients/#{client.clients_sittings_id}/cancel_attendance", :method => :delete, :remote => true, class:"btn btn-default btn-xs cancel_attendance" do %>
                           <i class="glyphicon glyphicon-remove"></i>
                        <%end%>
                     </td>
                     <%end%>
                  </tr>
			</table>
		</div>
	</div>

	<div id="links" class="row col-xs-12">
		<%= button_to('Done', clients_schedule_meetings_path, :class => 'btn btn-primary btn-padded pull-right')%>
	</div>
</div>

