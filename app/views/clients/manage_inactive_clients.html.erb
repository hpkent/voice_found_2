<div class="container-fluid">
   <div id="links" class="row col-xs-12">
      <%= button_to('Back', clients_manage_clients_path, :class => 'btn btn-primary btn-padded pull-right')%>
   </div>
   <div class="row col-xs-12">
      <table class="table table-hover table-condensed">
         <thead>
            <tr class="noborder">
               <th colspan="5"><h3>Manage inactive clients</h3></th>
            </tr>
            <tr>
               <th>Client Name</th>
               <th>Category</th>
               <th>Edit</th>
            </tr>
         </thead>
            <% @clients.each do |client| %>
            <tr>
               <td id="name">
                  <% if client.last_name != nil %>
                     <%=client.first_name + " " + client.last_name%>
                  <%else %>
                     <%=client.first_name%>
                  <%end%>
               </td>
               <td>
                  <% if client.category_type.name != nil %>
                     <%=client.category_type.name%>
                  <%end%>
               </td>
               <td>
                  <%= button_to('Edit', edit_client_path(client), :class => 'btn btn-secondary btn-sm')%>
               </td>
            </tr>
         <%end%>
      </table>
   </div>
</div>
